<section class="section cta-section">
  <div class="container">
    <div class="cta-content">
      <h2>Connect with Super Speed Express Today</h2>
      <p>Experience the speed, efficiency, and reliability that set us apart.</p>
      <a href="#contact" class="btn btn-primary btn-large">Request Your Quote Now</a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 4rem 0;
  }
  
  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    color: var(--color-white);
    margin-bottom: 1rem;
    font-size: clamp(1.8rem, 4vw, 2.5rem);
  }
  
  .cta-content p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
  
  .cta-section .btn {
    background-color: var(--color-white);
    color: var(--color-primary);
    border: 2px solid var(--color-white);
  }
  
  .cta-section .btn:hover {
    background-color: transparent;
    color: var(--color-white);
  }
</style>